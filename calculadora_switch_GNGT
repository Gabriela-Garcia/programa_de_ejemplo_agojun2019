// CALCULADORA CON MENU

#include <iostream>
using namespace std;
int main()
{

    int a;
    float x, y;

    do
    {
        cout << " MENU...." << endl;
        cout << "1--SUMA" << endl;
        cout << "2--RESTA" << endl;
        cout << "3--MULTIPLICACION" << endl;
        cout << "4--DIVISION" << endl;
        cout << "5--SALIR" << endl;

        cout << "QUE OPERACION QUIERES REALIZAR? :^) " << endl;
        cin >> a;

    switch(a)
{
case 1:
        cout << "ingresa el primer numerito c: ";
        cin >> x;
        cout << " ingresa el segundo numerito c: ";
        cin >> y;
        cout << "Resultado de la suma: " << x + y << endl;
        break;
    case 2:
        cout << "ingresa el primer numerito c: ";
        cin >> x;
        cout << " ingresa el segundo numerito c: ";
        cin >> y;
        cout << "Resultado de la resta: " << x - y << endl;
        break;
    case 3:
        cout << "ingresa el primer numerito c: ";
        cin >> x;
        cout << " ingresa el segundo numerito c: ";
        cin >> y;
        cout << "Resultado de la multiplicacion: " << x * y << endl;
        break;
    case 4:
        cout << "ingresa el primer numerito c: ";
        cin >> x;
        cout << " ingresa el segundo numerito c: ";
        cin >> y;
        if (y!= 0.0)
        {

             cout << "Resultado de la division: " << x / y << endl;
        }
        else{
            cout << "el numerador debe ser diferente de cero >:C " << endl;
        }
        break;
    case 5:
        cout << " HASTA LA PROXIMA :d " << endl;
        break;
    default:
        cout << "no bro, intenta de nuevo..." << endl;
}

} while (a != 5);

return 0;
}
